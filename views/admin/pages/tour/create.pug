extends ../../layouts/default.pug
//- include ../../mixins/alert.pug
//- include ../../mixins/select-tree.pug

block main  
    
    h1(class="mb-4") Thêm mới sản phẩm
    
    form(
        action =`${prefixAdmin}/tours/create`
        id="form-create-tour"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="tour_category_id") Danh mục
            select(
                name="tour_category_id"
                id="tour_category_id"
                class="form-control"
            )
                option(value="") -- Chọn danh mục --
                //- if(records)
                //-     +select-tree(records)

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class ="form-check-input"
                id="featured1"
                name="featured"
                value="1"
            )
            lable(for="featured1" class="form-check-lable") Nổi bật
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class ="form-check-input"
                id="featured0"
                name="featured"
                value="0"
                checked
            )
            lable(for="featured0" class="form-check-lable") Không 
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                name="description"
                id="my-expressjs-tinymce-app"
                rows="5"
            )
        div(class="form-group")
            label(for="price") Giá
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="discountPercentage") % Giảm giá
            input(
                type="number"
                class="form-control"
                id="discountPercentage"
                name="discountPercentage"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(
                for="image"
                upload-image
                ) Ảnh
            input(
                type="file"
                class="form-control-file"
                id="image"
                name="image"
                accept="image/*"
                upload-image-imput
            )
            div(class= "image-container")
                img(
                    src=""
                    upload-image-preview
                    class="image-preview"
                )
                button(id="button-close-image") X
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-lable") Hoạt động 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
            )
            label(for="statusInactive" class="form-check-lable") Dừng hoạt động 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới
    
    script(src="/admin/js/products.js") 
    //- <!-- Script element sourcing TinyMCE -->
    <script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
    //- <!-- Script element sourcing the TinyMCE configuration -->
    <script type="application/javascript" src= "/admin/js/my-tinymce-config.js"></script>