extends ../../layouts/default
include ../../mixins/alert.pug
include ../../mixins/formHidden.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/sort.pug

block main
  +alert-success(5000)
  h1 Trang danh sách tài khoản


  .card.mb-3 
    .card-header Bộ lọc và tìm kiếm 
    .card-body 
      .row
        .col-6
          +filterStatus(filterStatus)
        .col-6
          //- +search(keyword)

  .card.mb-3 
    .card-header Sắp xếp 
    .card-body 
        .row
            .col-4  
              +sortAccount()

  .card.mb-3 
    .card-header Danh sách tài khoản
      .card-body
        .row 
          .col-10
          .col-2
            a(
              href=`${prefixAdmin}/accounts/create`
              class="btn btn-outline-success"
            ) + Thêm mới 

        table(
          class="table table-hover table-sm"
          ) 
          thead 
            tr
              th STT
              th Avatar
              th Họ tên
              th Phân quyền
              th Email
              th Trạng thái
              th Hành động 
          tbody 
            each item, index in accounts
              tr
                td #{index + 1}
                td
                  img(
                    src= item.avatar, 
                    alt=item.fullname,
                    width="100px", 
                    height="auto"

                  )
                td #{item.fullname}
                td #{item.role_title}
                td #{item.email} 
                td
                  if(item.status == "active")
                    a(
                      href="javascript:;"
                      data-status = item.status 
                      data-id = item.id 
                      button-change-status 
                      class="badge badge-success"
                      ) Hoạt động
                  else 
                    a(
                      href="javascript:;"
                      data-status = item.status 
                      data-id = item.id 
                      button-change-status 
                      class="badge badge-danger"
                    ) Dừng hoạt động
                td

                  a(
                    href=`${prefixAdmin}/accounts/edit/${item.id}`
                    class="btn btn-warning btn-sm"
                  ) Sửa

                  button(
                    id-item = item.id
                    button-delete
                    class="btn btn-danger btn-sm ml-1"
                  ) Xóa

                  a(
                    href=`${prefixAdmin}/accounts/detail/${item.id}`
                    class="btn btn-secondary btn-sm ml-1"
                  ) Chi tiết
  +pagination(objectPagination)


  +formHidden("form-button-delete", `${prefixAdmin}/accounts/delete`)
  +formHidden("form-change-status", `${prefixAdmin}/accounts/change-status`)
  script(src="/admin/js/product.js") 