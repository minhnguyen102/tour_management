extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12
        div(
          class="alert alert-success"
        ) Chúc mừng bạn đã đặt hàng thành công ! Mã đơn hàng của bạn là <b>#{inforUser.code}</b>
    
    .row 
      .col-12
        +box-head("Thông tin khách hàng")

        table(class="table table-bordered")
          tbody 
            tr 
              td Họ tên 
              td #{inforUser.fullName}
            tr 
              td Số điện thoại
              td #{inforUser.phone}
            tr 
              td Ghi chú
              td #{inforUser.note}
            tr 
              td Ngày đặt 
              td #{moment(inforUser.createdAt).format("MMMM Do YYYY, h:mm:ss a")}  
              


    .row 
      .col-12
        +box-head("Danh sách tour")

        table(class="table table-bordered")
          thead 
            tr 
              th STT
              th Ảnh
              th Tiêu đề 
              th Giá
              th Số lượng
              th Tổng tiền
          tbody
            each item, index in inforTour
              tr 
                td #{index + 1}
                td 
                    img(src=item.image, alt=item.title, width="80px")
                td #{item.title}
                td #{item.newPrice.toLocaleString()}đ
                td #{item.quantity}                            
                td #{item.totalPrice.toLocaleString()}đ

        h3(class="text-right") Tổng đơn hàng : #{totalPrice.toLocaleString()}đ



